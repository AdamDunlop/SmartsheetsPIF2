@model SmartsheetsPIF.Models.PIFModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">

    <div class="col-12">
        <h1>Edit</h1>

        <h4>
            PIF - @Html.DisplayFor(m => m.projectName)
        </h4>
        <hr />
    </div>
</div>


@using (Html.BeginForm("Save", "PIF", FormMethod.Post, new { @class = "form-group row" }))
{
<div class="col-12 col-md-6">
    @Html.HiddenFor(m => m.pif_Id)
    @*<div class="form-group">
            <label asp-for="lob" class="control-label">Line of Business</label>
            @Html.TextBoxFor(m => m.lob, new { @class = "form-control" })
            <span asp-validation-for="lob" class="text-danger"></span>
        </div>*@

    <div class="form-group">
        <label asp-for="projectName" class="control-label">Project Name</label>
        @Html.TextBoxFor(m => m.projectName, new { @class = "form-control" })
        <span asp-validation-for="projectName" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="lob" class="control-label">Line of Business</label>
        @Html.DropDownListFor(m => m.lob, Model.lob_options, new { @class = "form-control" })
        @Html.HiddenFor(m => m.lob)
        <span asp-validation-for="lob_options" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="tenroxCode" class="control-label">Tenrox Codes</label>
        @Html.TextBoxFor(m => m.tenroxCode, new { @class = "form-control" })
        <span asp-validation-for="tenroxCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="status" class="control-label">Status</label>
        @Html.DropDownListFor(m => m.status, Model.status_options, new { @class = "form-control" })
        @Html.HiddenFor(m => m.status)
        <span asp-validation-for="status_options" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="team" class="control-label">Team</label>
        @Html.DropDownListFor(m => m.team, Model.team_options, new { @class = "form-control" })
        @Html.HiddenFor(m => m.team)
        <span asp-validation-for="team_options" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="startDate" class="control-label">Start Date</label>
        @Html.TextBoxFor(m => m.startDate, "{0:d/M/yyyy}", new { @class = "form-control" })
        <span asp-validation-for="startDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="endDate" class="control-label">End Date</label>
        @Html.TextBoxFor(m => m.endDate, "{0:d/M/yyyy}", new { @class = "form-control" })
        <span asp-validation-for="endDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="boxFolder" class="control-label">Box Folder</label>
        @Html.TextBoxFor(m => m.boxFolder, new { @class = "form-control" })
        <span class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Deck" class="control-label">Deck</label>
        @Html.TextBoxFor(m => m.Deck, new { @class = "form-control" })
        <span class="text-danger"></span>
    </div>
</div>

<div class="col-12 col-md-6">

    <div class="form-group">
        <label asp-for="deliverables_tracker_link" class="control-label">Deliverables Tracker</label>
        @Html.TextBoxFor(m => m.deliverables_tracker_link, new { @class = "form-control" })
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="wbs_link" class="control-label">WBS</label>
        @Html.TextBoxFor(m => m.wbs_link, new { @class = "form-control" })
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PSDs" class="control-label">PSDs</label>
        @Html.TextBoxFor(m => m.PSDs, new { @class = "form-control" })
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="boxFolder" class="control-label">Final Deck</label>
        @Html.TextBoxFor(m => m.boxFolder, new { @class = "form-control" })
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="finalDeliveryFolder" class="control-label">FxF Deck</label>
        @Html.TextBoxFor(m => m.finalDeliveryFolder, new { @class = "form-control" })
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Specs" class="control-label">Deliverables</label>
        @Html.TextAreaFor(m => m.Specs, new { @class = "form-control" })
        <span asp-validation-for="tenroxCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="numberOfSets" class="control-label">Number Of Sets</label>
        @Html.TextBoxFor(m => m.numberOfSets, new { @class = "form-control" })
        <span class="text-danger"></span>
    </div>

    @*<div class="form-group">
        <label asp-for="animatedPerSet" class="control-label">Animated Per Set</label>
        @Html.TextBoxFor(m => m.animatedPerSet, new { @class = "form-control" })
        <span class="text-danger"></span>
    </div>*@

     @*<div class="form-group">
            <label asp-for="staticPerSet" class="control-label">Static Per Set</label>
            @Html.TextBoxFor(m => m.staticPerSet, new { @class = "form-control" })
            <span class="text-danger"></span>
        </div>*@


    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success float-right" />
    </div>
</div>

}
<div class="back">
    <a asp-action="ListPIFs" class="btn btn-secondary">
        <i class="bi bi-arrow-bar-left"></i>
        <span>Back to List</span>
    </a>
</div>

