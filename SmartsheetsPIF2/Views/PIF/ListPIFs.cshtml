@model IEnumerable<SmartsheetsPIF.Models.PIFModel>

@{
    ViewData["Title"] = "PIFs";
  }

<h1>Project List</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table table-striped">
    <thead class="pif-list-header">
        <tr>
            <th>
                LOB
            </th>
            <th>
                Project Name
            </th>
            <th>
                Team
            </th>
            <th>
                Status
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>

            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.projectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.team)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endDate)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.pif_Id }, new { @class = "button" })
                @Html.ActionLink("Details", "Details", new { id = item.pif_Id }, new { @class = "button" })
                @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
}
    </tbody>
</table>
