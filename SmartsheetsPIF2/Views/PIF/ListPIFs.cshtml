@model IEnumerable<SmartsheetsPIF.Models.PIFModel>

@{
    ViewData["Title"] = "PIFs";
}

<div class="row">
    <div class="col-12">
        @{

            if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>THIS IS SPARTA!</strong> Your changes have been saved successfully.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
            }
        }
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h1>Project List</h1>
            <table class="table table-striped">
                <thead class="pif-list-header">
                    <tr>
                        <th>
                            LOB
                        </th>
                        <th>
                            Project
                        </th>
                        <th>
                            Team
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Start Date
                        </th>
                        <th>
                            End Date
                        </th>

                        <th class="action-header">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.lob)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.projectName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.team)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.startDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.endDate)
                            </td>

                            <td class="action-buttons">
                                @* @Html.ActionLink("Edit", "Edit", new { id = item.pif_Id }, new { @class = "button" })*@


                                <a href="@Url.Action("Edit", "PIF",new { id = item.pif_Id } )" class="btn btn-warning">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>


                                <a href="@Url.Action("Details", "PIF",new { id = item.pif_Id } )" class="btn btn-primary">
                                    <i class="bi bi-card-list"></i>
                                </a>
                                <button class="btn btn-secondary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-archive" viewBox="0 0 16 16">
                                    <path d="M0 2a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1v7.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 1 12.5V5a1 1 0 0 1-1-1V2zm2 3v7.5A1.5 1.5 0 0 0 3.5 14h9a1.5 1.5 0 0 0 1.5-1.5V5H2zm13-3H1v2h14V2zM5 7.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z" />
                                </svg></button>

                                @* @Html.ActionLink("Details", "Details", new { id = item.pif_Id }, new { @class = "button" })*@
                                @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>